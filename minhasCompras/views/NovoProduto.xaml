<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="minhasCompras.Views.NovoProduto"
             >

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

   
    
    <VerticalStackLayout VerticalOptions="Center" Spacing="10" Padding="25">

        <Frame BackgroundColor="#FF6200EE">
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="INSERIR AO CARRINHO" FontSize="Small" FontAttributes="Bold"/>
            </HorizontalStackLayout>
        </Frame>

        <Label Text="Descrição do Produto" Margin="0,15,0,0" />
        <Entry x:Name="txt_descricao"/>

        <Label Text="Quantidade do Produto"/>
        <Entry x:Name="txt_quantidade" Keyboard="Numeric"/>

        <Label Text="Preço Unitário"/>
        <Entry x:Name="txt_preco" Keyboard="Numeric"/>

        <Picker 
            Title="Tipo do Produto"
            ItemsSource="{Binding TipoProdutos}"
            SelectedItem="{Binding ProdutoSelecionado, Mode=TwoWay}"/>

        <Button Text="Voltar" Clicked="Button_Clicked" Margin="0,50,0,0"/>

    </VerticalStackLayout>
</ContentPage>